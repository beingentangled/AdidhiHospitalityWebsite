{
  "hosting": {
    "public": ".next",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "/.well-known/assetlinks.json",
        "destination": "/.well-known/assetlinks.json"
      },
      {
        "source": "/apple-app-site-association",
        "destination": "/apple-app-site-association"
      },
      {
        "source": "**",
        "function": "nextServer"
      }
    ]
  }
}
